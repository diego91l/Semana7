<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7.Vistas.vActualizar"
             Title="vActualizar">
    <VerticalStackLayout>
        <Label 
            Text="Agregar Estudiante"
            FontSize="20"
            HorizontalTextAlignment="Center"/>

        <Entry x:Name="txtCodigo" Placeholder="Ingrese el codigo" Keyboard="Numeric"/>

        <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>

        <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"/>

        <Entry x:Name="txtEdad" Placeholder="Ingrese el rdad" />

        <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="DarkGray" Margin="0,20,0,0"/>

        <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="DarkGray" Margin="0,20,0,0"/>
        
        
    </VerticalStackLayout>
</ContentPage>